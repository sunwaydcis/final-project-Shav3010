<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ponggame.view.LeaderboardController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0">
         <image>
            <Image url="@../background.jpg" />
         </image>
      </ImageView>
      <TableView fx:id="leaderboardTable" layoutX="97.0" layoutY="38.0" prefHeight="337.0" prefWidth="402.0">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="261.0" text="Name" />
          <TableColumn fx:id="scoreColumn" prefWidth="139.0" text="Highest Score" />
        </columns>
      </TableView>
      <MenuBar fx:id="menuBar" layoutX="1.0">
         <menus>
            <Menu mnemonicParsing="false" text="Play" />
            <Menu mnemonicParsing="false" text="Leaderboard" />
            <Menu mnemonicParsing="false" text="Profile" />
         </menus>
      </MenuBar>
   </children>
</AnchorPane>
